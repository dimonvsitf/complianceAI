// document_processor/categorizer/schemas/company_formation.json
{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "document_type": {
            "type": "string",
            "enum": [
                "certificate_of_incorporation",
                "articles_of_association",
                "trade_license",
                "business_registration"
            ]
        },
        "company_details": {
            "type": "object",
            "properties": {
                "company_name": {"type": "string"},
                "registration_number": {"type": "string"},
                "date_of_incorporation": {"type": "string", "format": "date"},
                "registered_address": {"type": "string"},
                "business_type": {"type": "string"},
                "jurisdiction": {"type": "string"}
            },
            "required": ["company_name", "registration_number"]
        },
        "directors": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {"type": "string"},
                    "role": {"type": "string"},
                    "appointment_date": {"type": "string", "format": "date"}
                }
            }
        },
        "share_capital": {
            "type": "object",
            "properties": {
                "authorized_capital": {"type": "number"},
                "currency": {"type": "string"},
                "share_classes": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "class": {"type": "string"},
                            "number_of_shares": {"type": "number"},
                            "nominal_value": {"type": "number"}
                        }
                    }
                }
            }
        }
    },
    "required": ["document_type", "company_details"]
}